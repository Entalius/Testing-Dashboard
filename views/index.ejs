<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.0/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <div class="wrapper">
        <nav class="main-nav">
            <ul>
                <li><a href="#">Dashboard</a></li>
                <li><a href="#" class="msisdn-filter-btn">MSISDN Overview</a></li>
                <li><a href="#" class="sim-filter-btn">SIM Overview</a></li>
            </ul>
        </nav>
        <header class="main-header">
            <h1>Dashboard</h1>
        </header>
        <main class="main-content">
            <section class="chart-section">
                <div class="chart-wrapper">
                    <canvas id="voice-msisdn-chart"></canvas>
                </div>
            </section>
            <section class="info-section">
                <div class="info-box total-msisdn">
                    <h3>Total MSISDNs</h3>
                    <span class="value"></span>
                </div>
                <div class="info-box active-sim-cards">
                    <h3>Active SIM Cards</h3>
                    <span class="value"></span>
                </div>
            </section>
            <div class="filtering-menu msisdn-filter-menu">
                <h3>Filter MSISDN Data</h3>
                <div class="filter-row">
                    <label for="msisdn-category">Category:</label>
                    <select name="msisdn-category" id="msisdn-category" multiple>
                        <option value="Voice">Voice</option>
                    </select>
                </div>
                <div class="filter-row">
                    <label for="msisdn-status">Status:</label>
                    <select name="msisdn-status" id="msisdn-status" multiple>
                        <option value="Free">Free</option>
                        <option value="Assigned">Assigned</option>
                    </select>
                </div>
                <div class="filter-row">
                    <button class="apply-msisdn-filter">Apply Filter</button>
                    <button class="reset-msisdn-filter">Reset Filter</button>
                </div>
            </div>
            <div class="filtering-menu sim-filter-menu">
                <h3>Filter SIM Data</h3>
                <div class="filter-row">
                    <label for="sim-category">Category:</label>
                    <select name="sim-category" id="sim-category" multiple>
                        <option value="P-SIM">P-SIM</option>
                        <option value="E-SIM">E-SIM</option>
                    </select>
                </div>
                <div class="filter-row">
                    <label for="sim-status">Status:</label>
                    <select name="sim-status" id="sim-status" multiple>
                        <option value="Free">Free</option>
                        <option value="Assigned">Assigned</option>
                    </select>
                </div class="filter-row">
                    <button class="apply-sim-filter">Apply Filter</button>
                    <button class="reset-sim-filter">Reset Filter</button>
                </div>
            </div>
        </main>
    </div>
    <script src="/js/main.js"></script>
</body>
</html>
